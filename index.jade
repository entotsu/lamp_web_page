  script(type='text/javascript')

    var remain_sec = 30*60;
    var isLighted = false;

    $(function(){
        $('#bunnerText').addClass('animated fadeIn');
        $('.flexslider').flexslider({
                slideshowSpeed: 5000, 
                touch: true, 
                padding : 0,
                margin : 0,
                openEffect  : 'elastic',
                aspectRatio : true
            });
        $('#readingLampImage').waypoint(function() {
            if(! isLighted){
                isLighted = true;
                light_lamp();
            }
        }, { offset: 90 });

        setTimeout(function(){
            $('.addthis_button_facebook').a
            ttr("href","http://www.facebook.com/plugins/like.php?href=https%3A%2F%2Fdl.dropboxusercontent.com%2Fu%2F20071392%2FLAMP%2Findex.html%23.UrShfWRdVzL&width&layout=standard&action=like&show_faces=true&share=true&height=80&appId=278696802286743");
            },3000);

    });

    function light_lamp(){
        $("#readingLampImage").css("display","none");
        $("#readingLampImage_light").css("display","block");
        document.getElementById("LightingSound").play();
        $("body").css({
            background: "-webkit-linear-gradient(top, #ffe8b0 0%, #36668c 50%, #0c3257 100%) fixed"}).css({
            background: "-moz-linear-gradient(top, ffe8b0 0%, #36668c 50%, #0c3257 100%) fixed"
        });
        $("#bunner > div > div").css("color","black");
        setInterval(function(){
            step_timer();
        },1000);
    }

    function step_timer(){
        remain_sec--;
        var min = Math.floor(remain_sec/60);
        var sec = remain_sec - (min*60);
        var sec_str = ("0"+sec).slice(-2);
        var min_str = ("0"+min).slice(-2);
        $("#timerCounter").html(min_str+":"+sec_str);
    }

